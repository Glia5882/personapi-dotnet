@model personapi_dotnet.Models.Entities.Telefono

@{
    ViewData["Title"] = "Detalles del Teléfono";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Número</dt>
        <dd class="col-sm-10">@Model.Num</dd>

        <dt class="col-sm-2">Operadora</dt>
        <dd class="col-sm-10">@Model.Oper</dd>

        <dt class="col-sm-2">Cédula Persona</dt>
        <dd class="col-sm-10">@Model.Duenio</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.Num" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
