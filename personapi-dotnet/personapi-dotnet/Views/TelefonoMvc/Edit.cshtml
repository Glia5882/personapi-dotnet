@model personapi_dotnet.Models.Entities.Telefono

@{
    ViewData["Title"] = "Editar Teléfono";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Num" />
    <div class="form-group">
        <label asp-for="Oper"></label>
        <input asp-for="Oper" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Duenio"></label>
        <select asp-for="Duenio" class="form-control"
                asp-items="@(new SelectList(ViewBag.Personas, "Cc", "Nombre"))">
            <option value="">-- Selecciona una persona --</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
