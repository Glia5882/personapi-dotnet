@model personapi_dotnet.Models.Entities.Telefono
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Agregar Teléfono";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Num" class="control-label"></label>
        <input asp-for="Num" class="form-control" />
        <span asp-validation-for="Num" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Oper" class="control-label"></label>
        <input asp-for="Oper" class="form-control" />
        <span asp-validation-for="Oper" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duenio" class="control-label">Persona dueña</label>
        <select asp-for="Duenio" class="form-control"
                asp-items="@(new SelectList(ViewBag.Personas, "Cc", "NombreCompleto"))">
            <option value="">-- Selecciona una persona --</option>
        </select>
        <span asp-validation-for="Duenio" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
