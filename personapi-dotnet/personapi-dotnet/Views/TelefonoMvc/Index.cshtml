@model IEnumerable<personapi_dotnet.Models.Entities.Telefono>

@{
    ViewData["Title"] = "Lista de Teléfonos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Teléfono</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Número</th>
            <th>Operadora</th>
            <th>Cédula Persona</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Num</td>
                <td>@item.Oper</td>
                <td>@item.Duenio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Num">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Num">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Num">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
