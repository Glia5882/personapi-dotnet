@model personapi_dotnet.Models.Entities.Persona

@{
    ViewData["Title"] = "Crear Persona";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" asp-controller="PersonaMvc">
    <div class="form-group">
        <label asp-for="Cc"></label>
        <input asp-for="Cc" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genero"></label>
        <select asp-for="Genero" class="form-control">
            <option value="M">Masculino</option>
            <option value="F">Femenino</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Edad"></label>
        <input asp-for="Edad" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>
<a asp-action="Index" asp-controller="PersonaMvc" class="btn btn-secondary">Volver</a>
