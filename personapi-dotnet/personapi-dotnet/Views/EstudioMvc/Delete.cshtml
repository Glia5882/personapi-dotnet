@model personapi_dotnet.Models.Entities.Estudio

@{
    ViewData["Title"] = "Eliminar Estudio";
}

<h1>Eliminar Estudio</h1>

<h4>¿Estás seguro de eliminar este estudio?</h4>

<dl class="row">
    <dt class="col-sm-2">Persona</dt>
    <dd class="col-sm-10">@Model.CcPerNavigation?.Nombre @Model.CcPerNavigation?.Apellido</dd>

    <dt class="col-sm-2">Profesión</dt>
    <dd class="col-sm-10">@Model.IdProfNavigation?.Nom</dd>

    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.Fecha?.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Universidad</dt>
    <dd class="col-sm-10">@Model.Univer</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" name="idProf" value="@Model.IdProf" />
    <input type="hidden" name="ccPer" value="@Model.CcPer" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
