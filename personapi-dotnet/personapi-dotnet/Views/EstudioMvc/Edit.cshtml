@model personapi_dotnet.Models.Entities.Estudio
@{
    ViewData["Title"] = "Editar Estudio";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdProf" />
    <input type="hidden" asp-for="CcPer" />

    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Univer"></label>
        <input asp-for="Univer" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Volver</a>
